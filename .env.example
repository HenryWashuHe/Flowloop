# FlowLoop Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Backend Configuration
# =============================================================================

# Server settings
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
BACKEND_WORKERS=1

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Database (SQLite for development)
DATABASE_URL=sqlite:///./flowloop.db

# Logging
LOG_LEVEL=INFO

# =============================================================================
# ML Configuration
# =============================================================================

# Model paths (relative to backend/models/)
EMOTION_MODEL_PATH=models/emotion_net.onnx
FUSION_MODEL_PATH=models/fusion_net.onnx

# Inference settings
USE_GPU=false
BATCH_SIZE=1

# =============================================================================
# Frontend Configuration
# =============================================================================

# API endpoint
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# Feature flags
VITE_ENABLE_DEBUG_OVERLAY=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# Development Settings
# =============================================================================

# Hot reload
VITE_HMR_HOST=localhost

# Debug mode
DEBUG=true

# =============================================================================
# Dataset Paths (for ML training)
# =============================================================================

# FER2013
FER2013_PATH=./ml/data/raw/fer2013

# AffectNet (optional)
AFFECTNET_PATH=./ml/data/raw/affectnet

# DAiSEE (optional)
DAISEE_PATH=./ml/data/raw/daisee

# =============================================================================
# Kaggle API (for dataset download)
# =============================================================================

# KAGGLE_USERNAME=your_username
# KAGGLE_KEY=your_api_key
